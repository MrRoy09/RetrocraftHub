                          <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                      </li>
                    </ul>
                  </div>
                </div>
              </nav>

        </div>

       
       <div class="container-fluid" style="padding:4%;">
        <div class="text-center container-fluid">
            <h1>Your Current Jobs</h1>
        </div>
        {{#each jobList}}
       <div class="card job-card" style="width: 18rem;">
            <div class="card-body">
            <h5 class="card-title">{{this.jobname}}</h5>
            <p class="card-text">{{this.jobdes}}</p>
            <a href="aJob{{this.jobid}}" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
        {{/each}}
       </div>
       




         
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script src="script_home.js"></script>
